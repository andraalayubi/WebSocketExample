{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.WebSockets": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    },
    "File": {
      "Path": "Logs/app.log",
      "Append": true,
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 3
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=WebSocketDb;Username=postgres;Password=andra123;Pooling=true;Timeout=30;CommandTimeout=30;"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 52428800,
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100
    }
  },
  "WebSocket": {
    "KeepAliveInterval": 120,
    "ReceiveBufferSize": 4096,
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "*.ngrok.io"
    ]
  }
}